<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:text="email@email.ru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_email"
            app:layout_constraintLeft_toLeftOf="@+id/user_name"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            android:layout_marginLeft="0dp"/>

    <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_username"
            app:layout_constraintTop_toTopOf="@+id/user_name"
            app:layout_constraintLeft_toRightOf="@+id/user_name"
            android:layout_marginLeft="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/user_name"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            style="@style/Base.TextAppearance.AppCompat.Title.Inverse"
            android:textColor="@color/secondaryColor"
            android:layout_marginStart="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.523"/>

    <TextView
            android:text="address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_address"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_email"
            app:layout_constraintLeft_toLeftOf="@+id/user_name"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView
            android:text="phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_phone"
            app:layout_constraintLeft_toRightOf="@+id/user_email"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            android:layout_marginStart="8dp"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.52"/>

    <TextView
            android:text="site.ru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_site"
            app:layout_constraintLeft_toRightOf="@+id/user_company"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/user_address"
            android:layout_marginRight="24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.502"/>

    <TextView
            android:text="Company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_company"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/user_address"
            app:layout_constraintLeft_toLeftOf="@+id/user_name"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:textColor="@color/secondaryLightColor"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>

</android.support.constraint.ConstraintLayout>