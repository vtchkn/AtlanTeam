<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/primaryLightColor">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

            <android.support.v7.widget.CardView
                    android:id="@+id/posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/post_title"
                            style="@style/Base.TextAppearance.AppCompat.Title"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                           />

                    <TextView
                            android:text="Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/post_body"
                            android:layout_marginTop="13dp"
                            app:layout_constraintTop_toBottomOf="@+id/post_title"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            style="@style/Base.TextAppearance.AppCompat.Body1"
                            app:layout_constraintHorizontal_bias="0.501"/>

                    <TextView
                            android:text="Пост №:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/post_msg"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/post_body"
                            app:layout_constraintBottom_toBottomOf="@+id/post_number"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="190dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintVertical_bias="0.944"
                            android:textSize="12sp"
                            />

                    <com.andreabaccega.widget.FormEditText
                            android:id="@+id/post_number"
                            app:testType="numericRange"
                            app:minNumber="1"
                            app:maxNumber="100"
                            app:testErrorString="@string/number_error_message"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            app:emptyErrorString="@string/number_error_empty"
                            android:maxLines="1"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/post_body"
                            android:maxLength="3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintVertical_bias="0.0"
                            app:layout_constraintLeft_toRightOf="@+id/post_msg"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="16dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="12sp"
                          />

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/comment_name"
                            style="@style/Base.TextAppearance.AppCompat.Title"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                           />

                    <TextView
                            android:text="Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/comment_body"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/comment_name"
                            android:layout_marginRight="8dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            style="@style/Base.TextAppearance.AppCompat.Body1"
                            app:layout_constraintHorizontal_bias="0.501"/>

                    <TextView
                            android:text="email@email.ru"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/comment_email"
                            android:layout_marginLeft="16dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            style="@style/Base.TextAppearance.AppCompat.Caption"
                            app:layout_constraintBottom_toBottomOf="@+id/comment_msg"
                            app:layout_constraintTop_toTopOf="@+id/comment_msg"
                            app:layout_constraintVertical_bias="0.0"
                            app:layout_constraintDimensionRatio=""/>

                    <TextView
                            android:text="Комментарий №:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/comment_msg"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/comment_body"
                            app:layout_constraintBottom_toBottomOf="@+id/comment_number"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="150dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintVertical_bias="0.944"
                            android:textSize="12sp"
                            />

                    <com.andreabaccega.widget.FormEditText
                            android:id="@+id/comment_number"
                            app:testType="numericRange"
                            app:minNumber="1"
                            app:maxNumber="100"
                            app:testErrorString="@string/number_error_message"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            app:emptyErrorString="@string/number_error_empty"
                            android:maxLines="1"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/comment_body"
                            android:maxLength="3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintVertical_bias="0.0"
                            app:layout_constraintLeft_toRightOf="@+id/comment_msg"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="16dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textSize="12sp"
                            />

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/users"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_users"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/cl_user"
                        />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/photo"
                        android:id="@+id/main_photo"
                        android:layout_margin="20dp"
                        android:layout_gravity="center_horizontal"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/todos"
                    android:layout_margin="10dp">

                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Todo"
                        android:layout_margin="20dp"
                        style="@style/Base.TextAppearance.AppCompat.Body2"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>